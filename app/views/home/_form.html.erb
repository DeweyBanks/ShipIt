<%= form_for @shipment, :html => {:class => "form-horizontal"} do |f| %>
  <% if @shipment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@shipment.errors.count, "error") %> prohibited this shipment from being saved:
      </h2>
      <ul>
      <% @shipment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.fields_for :order do |order|%>
        <%= order.hidden_field :status, :value => "active" %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= order.text_field :number,
              {:class => 'form-control',
              :placeholder => 'Order Number'}
            %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= order.collection_select :vendor_id,
              Vendor.all, :id ,:name,
              { include_blank: "Vendor" },
              { :class => "btn btn-secondary dropdown-toggle" }
            %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.fields_for :address do |address| %>
        <div class="form-group">
          <div class="col-sm-10">
            <%= address.text_field :address1,
              {:class => 'form-control',
              :placeholder => 'Address1'}
            %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= address.text_field :address2,
              {:class => 'form-control',
              :placeholder => 'Address2'}
            %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= address.text_field :city,
              {:class => 'form-control',
              :placeholder => 'City'}
            %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= address.text_field :state_name,
              {:class => 'form-control',
              :placeholder => 'State'}
            %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= address.text_field :zipcode,
              {:class => 'form-control',
              :placeholder => 'Zipcode'}
            %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :tracking_number,
        {:class => 'form-control',
        :placeholder => 'Tracking Number'}
      %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-default" %>
  </div>
<% end %>

